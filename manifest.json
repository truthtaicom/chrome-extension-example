{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1",
  "description": "A Chrome extension",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": ["tabs", "<all_urls>"],
  "browser_action": {
    "default_icon": "assets/icon-on.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": [
      "content.js"
    ],
    "run_at": "document_idle"
  }]
}